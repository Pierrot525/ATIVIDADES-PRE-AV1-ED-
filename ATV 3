#include <stdio.h>
#include <stdlib.h>

int main(){
int tam, *vet;

      printf("qual tamanho do seu vetor?\n");
      scanf("%d",&tam);

 vet = malloc( sizeof(int) * tam);
 
    for(int i=0;i<tam;i++){
        
        printf("\nprencha o vetor no indice (digite -1 para encerrar) : %d \n", i);
        scanf("%d", &vet[i]);
      
        
        if( vet[i] == -1){
            
            printf("\nvetor encerrado\n");
            break;
        }
    }
    
    for(int i=0;i<tam;i++){
     printf("\nseu valor do indice : %d e:\n ( %d )   ",i,vet[i]);
    }
  
 
     free(vet);

return 0;}
